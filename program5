#include <stdio.h>

int main() {
    float radius;
    const float pi = 3.14159;
    
    printf("Enter the radius of the circle: ");
    scanf("%f", &radius);
    
    float area = pi * radius * radius;
    float circumference = 2 * pi * radius;
    
    printf("Area=%.2f, Circumference=%.2f\n", area, circumference);
    
    return 0;
}
